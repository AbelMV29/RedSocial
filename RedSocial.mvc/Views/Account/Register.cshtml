@{
}
@model RegisterViewModel
<div class=" mt-5 w-100 d-flex justify-content-center" >
    <form class="row g-3 border-danger" asp-controller="Account" asp-action="Register" method="post" style="width:26rem">
        <div class="col-12 text-center">
            <h2>Registrate! Es rapido</h2>
        </div>
        <div class="col-md-6">
            <label asp-for="Name"></label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Tu nombre" />
            <span class="text-danger" asp-validation-for="Name"></span>

        </div>
        <div class="col-md-6">
            <label asp-for="LastName"></label>
            <input type="text" class="form-control" asp-for="LastName" placeholder="Tu apellido" />
            <span class="text-danger" asp-validation-for="LastName"></span>

        </div>
        <div class="col-12">
            <label asp-for="UserName"></label>
            <input type="text" class="form-control" asp-for="UserName" placeholder="example" />
            <span class="text-danger" asp-validation-for="UserName"></span>

        </div>
        <div class="col-12">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" placeholder="example@mail.com" />
            <span class="text-danger" asp-validation-for="Email"></span>
            <span class="form-text">Esta información es de caracter privada por lo cual no sera compartida</span>
        </div>
        <div class="col-12">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" asp-for="Password" placeholder="*********" />
            <span class="text-danger" asp-validation-for="Password"></span>
            <span class="form-text">La contraseña debe tener [8,15] caracteres (1 especial, 1 mayuscula y 1 minuscula)</span>
        </div>
        <div class="col-12">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="*********" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>

        <div class="col-12">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger col-12"></div>
        </div>
        <div class="col-12">
            <button class="btn btn-success col-12 px-1" type="submit">Registrarme</button>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}